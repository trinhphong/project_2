= form_for vietnamese_phrase do |f|
  - if vietnamese_phrase.errors.any?
    #error_explanation
      %h2= "#{pluralize(vietnamese_phrase.errors.count, "error")} prohibited this vietnamese_phrase from being saved:"
      %ul
        - vietnamese_phrase.errors.full_messages.each do |message|
          %li= message
  
  .field
    = text_area_tag "zh_phrase", nil, disabled: true, class: "form-control", rows: 4
  
  .field
    = text_area_tag "vn_phrase", nil, disabled: true, class: "form-control", rows: 5

  .field
    = f.text_area :content, class: "form-control", rows: 5, required: true

  .field
    = f.hidden_field :chinese_phrase_id, class: "form-control"

  .actions
    = f.submit 'Save', class: "btn btn-primary form-control"
